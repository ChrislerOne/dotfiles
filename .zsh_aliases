# Load shared aliases
if [ -f "$HOME/dotfiles/.aliases" ]; then
    while IFS='=' read -r key value; do
        [[ "$key" =~ ^[[:space:]]*# || -z "$key" ]] && continue
        alias "$key"="$value"
    done < "$HOME/dotfiles/.aliases"
fi

# Zsh-specific aliases
alias cat=bat
alias ls=eza
alias ll="eza -la"
alias la="eza -a"
alias lt="eza --tree"
alias lg="eza -la --git"
alias cd=z
alias j=z
